package com.theicecreambear.engine;

import javax.swing.JFrame;

public class GameEngine {
	public static boolean running = true;
	public JFrame frame;

	public GameEngine() {
		initialize();
		run();
	}

	public void initialize() {

	}

	public void update() {

	}

	public void render() {

	}

	public void run() {
		long time = System.nanoTime();
		final double tick = 60.0;
		double ms = 100000000 / tick;
		double deltaTime = 0;
		int ticks = 0;
		int fps = 0;
		long timer = System.currentTimeMillis();
		long frameLimit = 60;
		
		// int seconds = 0;
		// int minutes = 0;
		// int hours = 0;

		while (running) {
			long currentTime = System.nanoTime();
			deltaTime += (currentTime - time) / ms;

			time = currentTime;
			if (deltaTime >= 1) {
				update();
				ticks++;
				deltaTime--;
			}
			render();

			fps++;

			if (System.currentTimeMillis() - timer > 1000) {
				timer += 1000;
				// seconds++;
				// if (seconds > 59) {
				// seconds %= 60;
				// minutes++;
				// }
				// if (minutes > 59) {
				// minutes %= 60;
				// hours++;
				// }

				ticks = 0;
				fps = 0;
			}
		}
	}
}
